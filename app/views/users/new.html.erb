<h1>Sign Up </h1>

<% if @user.errors.any? %>
    <ol>
        <% @user.error.full_messages_each do [msg] %>
            <li> <%= msg %></li>
        <% end %>

    </ol>   
<% end %>

<%= form_for @user do |f|%>
    <div class = "form-group">
        <%= f.label :firtName%>
        <%= f.text_field :firtName, :class=> 'form-control' %>
    </div>

    <div class = "form-group">
        <%= f.label :lastName%>
        <%= f.text_field :lastName, :class=> 'form-control' %>
    </div>


    <div class="form-group">
        <%= f.label :email%>
        <%= f.email_field :email, :class => 'form-control' %>
    </div>

    

  <% f.submit "Sign Up", :class => 'btn btn-intro' %>

  <% end %>
